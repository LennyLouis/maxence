{% extends 'admin/base.html.twig' %}

{% set breadcrumb = ["Utilisateurs"] %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <table class="table table-responsive-sm table-hover table-outline mb-0">
        <thead class="thead-light">
        <tr>
            <th class="text-center">
                <svg class="c-icon">
                    <use xlink:href="/build/admin/sprites/free.svg#cil-people"></use>
                </svg>
            </th>
            <th>Utilisateur</th>
            <th class="text-center">Pays</th>
            <th>Usage</th>
            <th class="text-center">Payment Method</th>
            <th>Activity</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
        <tr>
            <td class="text-center">
                <div class="c-avatar"><img class="c-avatar-img" src="{{ user.avatar }}" alt=""><span class="c-avatar-status bg-success"></span></div>
            </td>
            <td>
                <div>{{ user.firstName }} {{ user.lastName }}</div>
                <div class="small text-muted">{% if user.createdAt.diff(date("now"|date("m/d/Y"))).days<7 %}<span>New</span> | {% endif %}Inscrit le : {{ user.createdAt|date("j F Y") }}</div>
            </td>
            <td class="text-center">
                <svg class="c-icon c-icon-xl">
                    <use xlink:href="/build/admin/sprites/flag.svg#cif-us"></use>
                </svg>
            </td>
            <td>
                <div class="clearfix">
                    <div class="float-left"><strong>50%</strong></div>
                    <div class="float-right"><small class="text-muted">Jun 11, 2015 - Jul 10, 2015</small></div>
                </div>
                <div class="progress progress-xs">
                    <div class="progress-bar bg-success" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </td>
            <td class="text-center">
                <svg class="c-icon c-icon-xl">
                    <use xlink:href="/build/admin/sprites/brand.svg#cib-cc-mastercard"></use>
                </svg>
            </td>
            <td>
                <div class="small text-muted">Last login</div><strong>10 sec ago</strong>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
