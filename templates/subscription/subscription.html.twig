{% extends 'base.html.twig' %}

{% block title %}Hello SubscriptionController!{% endblock %}

{% block body %}
    <!-- Masthead-->
    <header class="masthead">
        <div class="container">
{#            <div class="masthead-subheading"></div>#}
            <div class="masthead-heading text-uppercase">Nos abonnements</div>
{#            <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger" href="#services">Tell Me More</a>#}
        </div>
    </header>

    <section class="pricing py-5">
        <div class="container">
            <div class="row justify-content-md-center">
                <!-- Free Tier -->
                {% for sub in subscriptions %}
                    <div class="col-lg-4">
                        <div class="card mb-5 mb-lg-0">
                            <div class="card-body">
                                <h5 class="card-title text-muted text-uppercase text-center">{{ sub.name|e }}</h5>
                                <h6 class="card-price text-center">{{ sub.price|e }}â‚¬<span class="period">/mois</span></h6>
                                <hr>
                                <ul class="fa-ul">
                                    {% for desc in sub.description|json_decode %}
                                        {% if desc.validate %}
                                            <li><span class="fa-li"><i class="fas fa-check"></i></span>{{ desc.value }}</li>
                                        {% else %}
                                            <li class="text-muted"><span class="fa-li"><i class="fas fa-times"></i></span>{{ desc.value }}</li>
                                        {% endif %}
                                    {% endfor %}
                                </ul>
                                <a href="#" class="btn btn-block btn-primary text-uppercase">Choisir cette offre</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
